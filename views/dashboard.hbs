<html lang="pl-PL">
	<head>
		<meta charset="UTF-8"/>
		<meta name="viewport" content="width=device-width, initial-scale=1"/>
		<link rel="stylesheet" type="text/css" href="/css/styles.css"/>
		<title>Pracabezgranic.pl</title>
	</head>
	<body>

		<!-- NAGŁÓWEK -->
		<div class="header">

			<!-- LOGO -->
			<a class="logo" href="index.html">Pracabezgranic.pl</b>

			<!-- PRZYCISK MENU (TRYB MOBILNY) -->
			</a>

			<div class="icon" id="icon">
				<span></span>
				<span></span>
				<span></span>
				<span></span>
			</div>

			<!-- MENU -->
			<div class="menu" id="menu">
				<a href="">POWIĘKSZ CZCIONKĘ
				</a><a href=""><img  style="margin-right:2vw" src="/img/font-big.png"/>
				</a><a href="">ZMIEŃ KONTRAST
				</a><a href=""><img  style="margin-right:2vw" src="/img/contrast-on.png"/>
				</a><a href="">ZALOGUJ SIĘ
				</a><a href=""><img style="margin-right:2vw" src="/img/login.png"/>
				</a><a href="">INFORMACJE
				</a><a href=""><img src="/img/info.png"/>
				</a>
			</div>
		</div>

		<!-- TREŚĆ -->
		<div class="container">
			<h1>Witaj {{username}}</h1>
			{{#each offers}}
			<p><a class="link" href="/offers/{{this._id}}">{{this.title}} - {{this.city}}</a></p>
			<form action="/editoffer" method="post">
				<input type="text" name="offerId" value="{{this._id}}" hidden/>
				<input class="button" type="submit" value="Edytuj"/>
			</form>
			<form action="/removeoffer" method="post">
				<input type="text" name="offerId" value="{{this._id}}" hidden/>
				<input class="button" type="submit" value="Usuń"/>
			</form>
			{{else}}
			<p style="margin-top:3vh">Aktualnie nie masz żadnych ogłoszeń.</p>
			{{/each}}
			<p><a href="/newoffer"><button class="button" style="margin-top:10vh">Dodaj ogłoszenie</button></a></p>
			<form action="/logout" method="post">
				<p class="padding"><input class="button" type="submit" value="Wyloguj"/></p>
			</form>
		</div>

		<!-- STOPKA -->
		<div class="footer">&#169; 2019 Classic<span style="color:red">Net</span></div>
		
		<script>

			<!-- MENU (TRYB MOBILNY) -->
			var x = document.getElementById("icon");
			var y = document.getElementsById("menu");

			x.onclick = function(event) {
			x.classList.toggle('open');
			y.classList.toggle('open');
			}

		</script>
	</body>
</html>